	<scm>
		<connection>scm:git:ssh://github.com/clickntap/Stripecube.git</connection>
		<developerConnection>scm:git:ssh://git@github.com/clickntap/Stripecube.git</developerConnection>
		<url>https://github.com/clickntap/Stripecube</url>
		<tag>stripecube-1.46</tag>
	</scm>

	<properties>
		<!-- How to detect if you're running the latest version of the configured dependencies: mvn -N versions:display-property-updates OR mvn -N versions:display-plugin-updates -->

		<!-- Turn of the silly Java 8 Javadoc linter. -->
		<!-- <additionalparam>-Xdoclint:none</additionalparam> -->
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

		<source.version>1.6</source.version>
		<target.version>1.6</target.version>

		<!-- plugin versions -->
		<maven-compiler-plugin.version>3.1</maven-compiler-plugin.version>
		<maven-gpg-plugin.version>1.5</maven-gpg-plugin.version>
		<maven-javadoc-plugin.version>2.9.1</maven-javadoc-plugin.version>
		<maven-resources-plugin.version>2.6</maven-resources-plugin.version>
		<maven-release-plugin.version>2.5</maven-release-plugin.version>
		<maven-source-plugin.version>2.2.1</maven-source-plugin.version>
	</properties>

